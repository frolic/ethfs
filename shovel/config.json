      "event": {
        "name": "FileCreated",
        "type": "event",
        "anonymous": false,
        "inputs": [
          {
            "name": "indexedFilename",
            "type": "string",
            "indexed": true
          },
          {
            "name": "pointer",
            "type": "address",
            "indexed": true
          },
          {
            "name": "filename",
            "type": "string",
            "indexed": false,
            "column": "name"
          },
          {
            "name": "size",
            "type": "uint256",
            "indexed": false,
            "column": "size"
          },
          {
            "name": "metadata",
            "type": "bytes",
            "indexed": false,
            "column": "metadata"
          }
        ]
      }
    }
  ]
}
